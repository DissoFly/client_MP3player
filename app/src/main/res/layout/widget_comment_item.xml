<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_comment_like_count"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="0"
            />
        <ImageView
            android:id="@+id/btn_comment_like"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_like"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/layout_right"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_comment_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text_comment_username"
            android:textColor="#282828"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/text_comment_floor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="text_comment_floor"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text_comment"
            android:textColor="#1d1d1d"
            android:textSize="18dp"/>
    </LinearLayout>
</RelativeLayout>