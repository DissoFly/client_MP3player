<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_main_page_mine_friends"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:background="#fff">

        <Button
            android:id="@+id/btn_friend_news_list"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="@mipmap/bg_choose"
            android:text="动态"
            android:textColor="#d33a31"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/btn_friend_inbox_list"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="私信"
            android:textColor="#000"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/btn_friend_add_list"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="关注"
            android:textColor="#000"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/btn_friend_be_add_list"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="粉丝"
            android:textColor="#000"
            android:textSize="17dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
