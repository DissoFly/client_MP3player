<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_delect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    >

    <LinearLayout
        android:id="@+id/in_delect"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="#fff"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="17dp"
            android:text="确定将所选音乐从列表中移除吗？"
            android:textColor="#131313"
            android:textSize="22dp"
            />

        <CheckBox
            android:id="@+id/checkBox_delect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:text="同时删除本地文件"
            android:textColor="#535353"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:gravity="right|bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delect_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="取消"
                android:textColor="#d33a31"/>

            <Button
                android:id="@+id/btn_delect_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="删除"
                android:textColor="#d33a31"/>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
